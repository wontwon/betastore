<%= form_for @customer, url: sign_up_path do |f| %>

<div> 
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>


<div> 
	<%= f.label :email %>
	<%= f.text_field :email %>
</div>


<div> 
	<%= f.label :password %>
	<%= f.text_field :password %>
</div>

<div> 
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
</div>

<%= f.submit 'Sign Up' %>

<% end %>